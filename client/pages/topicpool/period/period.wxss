/* pages/topicpool/period/period.wxss */
page {
  height: 100%;
}

.container {
  display: block;
  height: 100%;
  padding-top: 120rpx;
}
.period{
  display: block;
  width: 630rpx;
  height: 900rpx;
  margin: 0 auto;
  padding-bottom: 60rpx;
  border-radius: 3px;
  background: #fff;
}
.period .period-title{
  display: block;
  width: 100%;
  height: 120rpx;
  padding: 0 60rpx;
  color: #fff;
  font-weight:bold;
  line-height: 120rpx;
  box-sizing:border-box;
  background: linear-gradient(to right,#f5be82, #f16348);
}
.period navigator{
  height: 100rpx;
  line-height: 120rpx;
  margin: 0 40rpx;
  padding-left: 20rpx;
  border-bottom:1px dashed #ccc;
}
.navigator-hover{
  background:#feefe2;
}