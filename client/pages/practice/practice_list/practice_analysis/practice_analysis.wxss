page {
  height: 100%;
}

.container {
  display: block;
  height: 100%;
  overflow: scroll;
  color: #fff;
}
.an-title{
  display: block;
  padding: 20rpx 0;
  text-align: center;
}
.an-odds{
  display: flex;
  width: 335rpx;
  height: 335rpx;
  flex-direction:column;
  justify-content: center;
  align-items: center;
  border-radius: 50%;
  margin: 20rpx auto;
  text-align: center;
  background: linear-gradient(to bottom right, rgba(12, 32, 136, .2), rgba(80, 153, 235, .2));
}
.an-odds text:nth-child(1){
  color: #4884e6;
}
.an-odds text:nth-child(2){
  font-size: 100rpx;
}
.an-usetime{
  display: flex;
  height: 160rpx;
  margin: 50rpx 30rpx;
  justify-content: space-between;
}
.an-usetime .an-useone{
  display: flex;
  width: 330rpx;
  height: 100%;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  line-height: 80rpx;
  border-radius: 5px;
  background: #2261e0;
}
.an-useone text:nth-child(1){
  color: #7cadfe;
  font-size: 35rpx;
}
.an-useone text:nth-child(2){
  font-size: 40rpx;
}
.an-answer{
  display: flex;
  margin: 0 30rpx;
  padding: 50rpx;
  flex-wrap:wrap;
  background: #fff;
}
.an-answer text{
  display:flex;
  width: 80rpx;
  height: 80rpx;
  margin: 20rpx 18rpx;
  justify-content:center;
  align-items:center;
  border-radius:50%;
  background: #f84e46;
}
.an-answer .active{
  background:#43b268;
}
.an-btn{
  display: flex;
  justify-content: space-between;
  margin:60rpx 20rpx 20rpx;
}
.an-btn button{
  display: flex;
  flex: 1;
  margin: 0 20rpx;
  color: #fff;
  justify-content: center;
  align-items: center;
}
.an-btn button:nth-child(1){
  background: #ed8e10;
}
.an-btn button:nth-child(2){
  background: #316acb;
}




